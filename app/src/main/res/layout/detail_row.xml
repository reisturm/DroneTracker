<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/detail_row">

    <TextView
        android:id="@+id/GUFI"
        android:layout_width="83dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="GUFI: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/Lat"
        android:layout_width="83dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Lat:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GUFI" />

    <TextView
        android:id="@+id/Long"
        android:layout_width="83dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Long:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lat" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Long"
        />

    <TextView
        android:id="@+id/textView_GUFI"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/GUFI"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="24sp"/>

    <TextView
        android:id="@+id/textView_Lat"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Lat"
        app:layout_constraintTop_toBottomOf="@+id/textView_GUFI"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="24sp"/>

    <TextView
        android:id="@+id/textView_long"
        android:layout_width="263dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Long"
        app:layout_constraintTop_toBottomOf="@+id/textView_Lat"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
